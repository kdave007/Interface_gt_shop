extends ../layout/index

block content
     div.py-10 
          h1.text-4xl.my-10.font-extrabold.text-center GT 
               span.font-normal Shop
          h2.text-center.text-2xl.font-extrabold= page

          .mt-8.mx-auto.max-w-md
               .bg-white.py-8.px-4.shadow
                    form.space-y-5
                         div
                              label.block.text-sm.uppercase.text-gray-400.mb-5.font-bold(for="name") Name
                              input#name.w-full.px-3.py-2.border.border-gray-300.rounded-md.placeholder-gray-400(placeholder="Your Name" type="text" name="name")
                         div
                              label.block.text-sm.uppercase.text-gray-400.mb-5.font-bold(for="email") Email
                              input#email.w-full.px-3.py-2.border.border-gray-300.rounded-md.placeholder-gray-400(placeholder="Your Email" type="text" name="email")     
                         div
                              label.block.text-sm.uppercase.text-gray-400.mb-5.font-bold(for="password") Password
                              input#password.w-full.px-3.py-2.border.border-gray-300.rounded-md.placeholder-gray-400(placeholder="Your Password" type="text" name="password")  
                         div
                              label.block.text-sm.uppercase.text-gray-400.mb-5.font-bold(for="repeat_password") Confirm your Password
                              input#repeat_password.w-full.px-3.py-2.border.border-gray-300.rounded-md.placeholder-gray-400(placeholder="Your Password" type="text" name="repeat_password")          

                         div.flex.items-center.justify-between
                              a(href="/auth/login") Already a Member? Log In
                              a(href="/auth/passwordRecovery") Forgot your Password?
                         
                         input( class="w-full bg-indigo-600 hover:bg-indigo-700 text-white font-bold py-3 cursor-pointer rounded-md" type="submit" value="Create account")     